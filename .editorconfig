# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Tabs in js, 2 space indentation
[**.js]
indent_style = space
indent_size = 2

# spaces in css
[**.css]
indent_style = space
indent_size = 2

# spaces in css
[**.scss]
indent_style = space
indent_size = 2

# spaces in ejs
[**.ejs]
indent_style = space
indent_size = 2

# spaces in html
[**.html]
indent_style = space
indent_size = 2

# spaces in ts, 2 space indentation
[**.ts]
indent_style = space
indent_size = 2

# spaces in json, 2 space indentation
[**.json]
indent_style = space
indent_size = 2
